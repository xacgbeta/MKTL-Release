<UserControl x:Class="MKTL.WPF.Views.ManifestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Steam Path:" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox Text="{Binding SteamPath}" IsReadOnly="True" Margin="0,0,0,10"/>
            
            <TextBlock Text="App ID:" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox Text="{Binding AppId}" Height="30" HorizontalContentAlignment="Center" Margin="0,0,0,10"/>
            
            <UniformGrid Columns="2" Margin="0,0,0,10">
                <Button Content="Add App" Command="{Binding AddAppCommand}" Height="30" Margin="0,0,5,0" Background="#444" Foreground="White"/>
                <Button Content="Remove" Height="30" Margin="5,0,0,0" Background="#444" Foreground="White"/>
            </UniformGrid>
            
            <TextBox Text="{Binding Log}" Height="150" IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>