<UserControl x:Class="MKTL.WPF.Views.UpdateControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Refresh List" Command="{Binding RefreshListCommand}" 
                HorizontalAlignment="Left" Margin="0,0,0,10" Width="100"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Games}" SelectedItem="{Binding SelectedGame}"
                  AutoGenerateColumns="False" HeadersVisibility="Column" 
                  Background="#222" RowBackground="#2b2b2b" Foreground="#EEE" BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="AppID" Binding="{Binding AppId}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding IsEnabled}" Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Toggle Selected" Command="{Binding ToggleSelectedCommand}" 
                Margin="0,10,0,0" Height="30"/>
    </Grid>
</UserControl>