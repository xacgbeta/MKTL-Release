<UserControl x:Class="MKTL.WPF.Views.EaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="EA Token Generator" FontSize="16" Foreground="#CCC" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <Button Content="SCAN MEMORY" Command="{Binding GenerateTokenCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    Height="40" Background="#555555" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            <ProgressBar Height="5" IsIndeterminate="{Binding IsBusy}" 
                         Background="Transparent" BorderThickness="0" Margin="0,0,0,10"/>

            <TextBlock Text="Token Output:" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox Text="{Binding TokenOutput}" Height="60" TextWrapping="Wrap" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Log:" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Log}" Height="100" IsReadOnly="True" Background="#222" BorderThickness="0" Margin="0,0,0,10"/>
            
            <TextBlock Text="Credit to Anadius" Foreground="#8367cc" FontStyle="Italic" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>