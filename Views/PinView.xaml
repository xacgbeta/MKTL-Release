<UserControl x:Class="MKTL.WPF.Views.PinView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Steam Pin Recovery" FontSize="16" Foreground="#CCC" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <TextBlock Text="This brute-forces your localconfig.vdf file." 
                       Foreground="#888" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,15"/>

            <Button Content="START CRACKING" Command="{Binding CrackPinCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    Height="40" Background="#703838" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            <ProgressBar Value="{Binding ProgressValue}" Height="10" Maximum="100" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding StatusText}" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Border Background="#333" Padding="10" CornerRadius="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="PIN: " FontWeight="Bold" Foreground="#CCC"/>
                    <TextBlock Text="{Binding ResultText}" FontWeight="Bold" Foreground="#00FF00" FontSize="14"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>