<Window x:Class="MKTL.WPF.Views.Components.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="150" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Border Background="#2b2b2b" BorderBrush="#555555" BorderThickness="1" CornerRadius="8">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                       Foreground="#CCC" FontWeight="Bold"/>

            <TextBlock Grid.Row="1" Text="{Binding Message, RelativeSource={RelativeSource AncestorType=Window}}" 
                       Foreground="#AAA" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,10"/>

            <!-- Replaced Spacing with Margin on the buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Click="BtnOk_Click" Width="70" Height="25" Background="#444" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
                <Button Content="Cancel" x:Name="BtnCancel" Click="BtnCancel_Click" Width="70" Height="25" Background="#703838" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>