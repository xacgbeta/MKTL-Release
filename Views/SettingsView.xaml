<UserControl x:Class="MKTL.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <StackPanel>
            <!-- Assuming discord.png exists, otherwise remove Image -->
            <Image Source="/Assets/Icons/discord.png" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <TextBlock Text="MKTL v3.0" FontSize="18" FontWeight="Bold" Foreground="#DDD" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <Button Content="Join Discord" Command="{Binding JoinDiscordCommand}" 
                    Width="120" Background="#5865F2" Foreground="White" Margin="0,0,0,15"/>

            <Border Background="#222" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <TextBlock Text="{Binding Credits}" Foreground="#AAA" TextWrapping="Wrap" TextAlignment="Center"/>
            </Border>

            <Button Content="Check for Updates" Command="{Binding CheckUpdatesCommand}" Height="30" Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>