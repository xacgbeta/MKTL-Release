<Window x:Class="MKTL.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MKTL.WPF.ViewModels"
        xmlns:views="clr-namespace:MKTL.WPF.Views"
        Title="MKTL v3.0" Height="450" Width="350"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ActivationViewModel}">
            <views:ActivationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManifestViewModel}">
            <views:ManifestView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DenuvoViewModel}">
            <views:DenuvoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EaViewModel}">
            <views:EaView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PinViewModel}">
            <views:PinView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DlcFinderViewModel}">
            <views:DlcFinderView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PatcherViewModel}">
            <views:PatcherView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UpdateControlViewModel}">
            <views:UpdateControlView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#2b2b2b" CornerRadius="10" BorderBrush="#3c3c3c" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="MenuToggle" Content="â˜°" Style="{StaticResource IconButtonStyle}" Margin="10,0"/>

                <TextBlock Grid.Column="1" Text="{Binding CurrentTitle}" Foreground="#AAAAAA" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Content="_" Click="Minimize_Click" Style="{StaticResource IconButtonStyle}"/>
                    <Button Content="X" Click="Close_Click" Style="{StaticResource IconButtonStyle}" Foreground="#FF6666"/>
                </StackPanel>
            </Grid>

            <Popup IsOpen="{Binding IsChecked, ElementName=MenuToggle}" StaysOpen="False" 
                   PlacementTarget="{Binding ElementName=MenuToggle}" Placement="Bottom">
                <Border Background="#3c3c3c" BorderBrush="#555555" BorderThickness="1" CornerRadius="4">
                    <StackPanel Width="150" Margin="2">
                        <Button Content="Manifest" Command="{Binding NavigateCommand}" CommandParameter="Manifest" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Denuvo" Command="{Binding NavigateCommand}" CommandParameter="Denuvo" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="EA Token" Command="{Binding NavigateCommand}" CommandParameter="EA" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="SteamDB" Command="{Binding NavigateCommand}" CommandParameter="SteamDB" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="OnlineFix" Command="{Binding NavigateCommand}" CommandParameter="OnlineFix" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Updates" Command="{Binding NavigateCommand}" CommandParameter="Updates" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Pin Recovery" Command="{Binding NavigateCommand}" CommandParameter="Pin" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Settings" Command="{Binding NavigateCommand}" CommandParameter="Settings" Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Dynamic Content -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="10"/>
        </Grid>
    </Border>
</Window>